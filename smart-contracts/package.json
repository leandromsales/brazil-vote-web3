{
  "name": "brtv-smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Brazil Vote Web3 electronic voting system",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test --network ${HARDHAT_NETWORK}",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "node": "hardhat node --network hardhat",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "tracer": "hardhat trace --network ${HARDHAT_NETWORK}",
    "gas": "REPORT_GAS=true hardhat test --network ${HARDHAT_NETWORK}"
  },
  "keywords": [
    "ethereum",
    "smart-contracts",
    "voting",
    "blockchain",
    "brazil",
    "web3",
    "hardhat"
  ],
  "author": "Brazil Vote Web3 Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.8",
    "hardhat": "^2.17.3",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-deploy": "^1.0.4",
    "hardhat-ethernal": "^3.4.0",
    "hardhat-gas-reporter": "^1.0.10",
    "hardhat-ignore-warnings": "^0.2.12",
    "hardhat-tracer": "^3.3.0",
    "solidity-coverage": "^0.8.16",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1"
  }
}
